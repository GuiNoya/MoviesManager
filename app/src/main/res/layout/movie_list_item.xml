<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for each item in a list -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_cover"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/movie_cover"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_image_24dp"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        android:minWidth="80dp"
        android:maxWidth="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@android:string/unknownName"
        android:id="@+id/movie_name"
        android:layout_marginTop="6dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/movie_cover"
        android:layout_toEndOf="@+id/movie_cover"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/movie_ratings"
        android:layout_toStartOf="@+id/movie_ratings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/unknown_release_date"
        android:id="@+id/movie_release_date"
        android:layout_alignLeft="@+id/movie_name"
        android:layout_alignStart="@+id/movie_name"
        android:layout_toEndOf="@id/movie_name"
        android:layout_toRightOf="@id/movie_name"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/parenthesis"
        android:id="@+id/movie_ratings"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more"
        android:contentDescription="@string/more"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_more_vert_24dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"/>
</RelativeLayout>